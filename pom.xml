<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.black_eyes.lootchest</groupId>
    <artifactId>LootChest</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>
    <modules>
        <module>fall_effect_interface</module>
        <module>fall_effect</module>
        <module>lootchest</module>
    </modules>
    <name>LootChest</name>
    <description>Create higly customizable lootboxes for your minecraft server</description>

    <properties>
        <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
        <maven.compiler.release>8</maven.compiler.release>
        <revision>2.4.6</revision>
        <paperVersion>1.21.1</paperVersion>
    </properties>
    <repositories>
        <repository>
            <id>nms-repo</id>
            <url>https://repo.codemc.org/repository/nms/</url>
        </repository>
        <repository>
            <id>papermc</id>
            <url>https://repo.papermc.io/repository/maven-public/</url>
        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.6.0</version>
            </plugin>
        </plugins>
    </build>
</project>
